{
    "extends": "../tsconfig.json",
    "include": [
        "src",
        "knexfile.ts",
        "../shared/src/bundles/categories/enums/category-type.enums.ts"
    ],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "outDir": "build",
        "skipLibCheck": true
    }
}
